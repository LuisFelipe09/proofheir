# ===========================================
# ProofHeir Web App - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values

# -------------------------------------------
# Privy Authentication
# -------------------------------------------
# Get your App ID from https://dashboard.privy.io
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id_here

# -------------------------------------------
# Blockchain Network Configuration
# -------------------------------------------
# Chain ID: 31337 (Anvil/local), 5003 (Mantle Sepolia), 5000 (Mantle Mainnet)
NEXT_PUBLIC_CHAIN_ID=31337

# RPC URL (optional - wagmi will use defaults if not set)
# For local dev: http://127.0.0.1:8545
# For Mantle Sepolia: https://rpc.sepolia.mantle.xyz
NEXT_PUBLIC_RPC_URL=http://127.0.0.1:8545

# -------------------------------------------
# Smart Contract Addresses
# -------------------------------------------
# Leave empty to use Anvil defaults, or set for deployed contracts
NEXT_PUBLIC_PROOF_HEIR_ADDRESS=
NEXT_PUBLIC_MOCK_TOKEN_ADDRESS=

# -------------------------------------------
# Backend API
# -------------------------------------------
# Rust API server URL for ZK proof generation
# Local: http://localhost:3001
# Production: Your deployed Rust API URL (e.g., https://proofheir-api.onrender.com)
RUST_API_URL=http://localhost:3001

# -------------------------------------------
# Upstash Redis (Inheritance Registry)
# -------------------------------------------
# Get credentials from https://console.upstash.com
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# -------------------------------------------
# Delegation Sponsor Wallet
# -------------------------------------------
# Private key for the sponsor wallet that pays for EIP-7702 delegations
# ⚠️ NEVER commit this value! Use a burner wallet with minimal funds.
SPONSOR_PRIVATE_KEY=
