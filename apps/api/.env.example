# ===========================================
# ProofHeir Rust API - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# -------------------------------------------
# CORS Configuration
# -------------------------------------------
# Allowed origin for CORS requests
# For local dev: http://localhost:3000
# For production: Your deployed web app URL (e.g., https://proofheir.vercel.app)
ALLOWED_ORIGIN=http://localhost:3000

# -------------------------------------------
# Server Binding
# -------------------------------------------
# PORT is automatically set by cloud providers like Render
# If PORT is set, the server binds to 0.0.0.0:$PORT
# Otherwise, uses BIND_ADDRESS or defaults to 0.0.0.0:3001
# PORT=3001

# Alternative: specify full bind address
# BIND_ADDRESS=0.0.0.0:3001

# -------------------------------------------
# Civil Registry Configuration
# -------------------------------------------
# Domain of the civil registry server (used for TLSNotary)
CIVIL_REGISTRY_DOMAIN=web-production-05160.up.railway.app

# Full URL of the civil registry API endpoint
CIVIL_REGISTRY_URL=https://web-production-05160.up.railway.app/VigenciaCedula/consulta

# -------------------------------------------
# Blockchain Configuration
# -------------------------------------------
# RPC URL for on-chain verification transactions
# For local dev: http://localhost:8545
# For Mantle Sepolia: https://rpc.sepolia.mantle.xyz
RPC_URL=http://localhost:8545

# Private key for the verifier wallet that submits on-chain proof verification
# ⚠️ NEVER commit this value! This wallet needs to be funded.
# For local dev, use Anvil's second default account:
# 0x59c6995e998f97a5a0044966f0945389dc9e86dae88c7a8412f4603b6b78690d
VERIFIER_PRIVATE_KEY=

# -------------------------------------------
# Logging (optional)
# -------------------------------------------
# Rust log level: trace, debug, info, warn, error
# RUST_LOG=proofheir_api=info,tower_http=debug
